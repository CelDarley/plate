# Configurações da API Placa FIPE Scraper
# Copie este arquivo para .env e ajuste as configurações

# Chave secreta da aplicação
SECRET_KEY=sua-chave-secreta-aqui

# Configurações de scraping
# Opções: 'selenium', 'requests', 'auto'
SCRAPER_METHOD=auto

# Configurações do Chrome para servidor headless
CHROME_HEADLESS=true
CHROME_NO_SANDBOX=true
CHROME_DISABLE_GPU=true

# Configurações do banco de dados
DB_HOST=localhost
DB_USER=plate
DB_PASSWORD=Plate()123
DB_NAME=plate

# Configurações da aplicação
FLASK_ENV=production
FLASK_DEBUG=false
HOST=0.0.0.0
PORT=5000

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/plate-api.log

# Configurações de timeout
REQUEST_TIMEOUT=30
SCRAPING_TIMEOUT=60
